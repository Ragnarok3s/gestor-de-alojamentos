# Sample configuration for gestor-de-alojamentos
# Copy to .env and adjust values for your environment.

# Optional server port. Defaults to 3000.
PORT=3000

# Path to the SQLite database file. Use :memory: for ephemeral dev/testing.
DATABASE_PATH=./data/gestor.sqlite

# Force secure cookies for HTTPS deployments (set to 1 in production).
FORCE_SECURE_COOKIE=0

# TLS certificate paths when running HTTPS directly from Node.
SSL_KEY_PATH=
SSL_CERT_PATH=

# SMTP settings for transactional email delivery.
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=0
SMTP_USER=
SMTP_PASS=
SMTP_HELO=gestor-app.local
SMTP_TIMEOUT=10000

# Secret used to sign export/download links.
EXPORT_SIGNING_KEY=change-me

# Public URLs used in transactional emails and feedback links.
PUBLIC_BASE_URL=http://localhost:3000
REVIEW_FEEDBACK_URL=

# Default timezone for dayjs helpers. Accepts any IANA identifier.
APP_DEFAULT_TIMEZONE=Europe/Lisbon

# Headless E2E smoke credentials (tests/e2e/*)
E2E_BASE_URL=http://localhost:3000
E2E_USER=gestor
E2E_PASSWORD=change-me
